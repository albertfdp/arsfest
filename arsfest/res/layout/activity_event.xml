<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/EventLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/header_bar" />

    <LinearLayout
        android:id="@+id/eventBackground"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/lilla"
        android:padding="5dip"
        android:paddingBottom="10dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/textViewEventName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageIconTime"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_below="@+id/textViewEventName"
            android:layout_marginTop="0dip"
            android:contentDescription="@string/time"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/textViewTime"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_below="@+id/textViewEventName"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/imageIconTime"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imageIconPlace"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_below="@+id/imageIconTime"
            android:layout_marginTop="0dip"
            android:contentDescription="@string/place"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/textViewPlace"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_below="@+id/textViewTime"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@+id/imageIconPlace"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="2"
        android:background="@color/black"
        android:padding="10dip" >

        <WebView
            android:id="@+id/textViewEventDescription"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/black"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/imageIconAlarm"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/transparent"
            android:contentDescription="@string/setAlarm"
            android:src="@drawable/alarm" />

        <ImageButton
            android:id="@+id/imageIconMap"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="120dip"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@android:color/transparent"
            android:contentDescription="@string/viewMap"
            android:src="@drawable/map" />
    </RelativeLayout>

</LinearLayout>