<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AboutLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <com.coboltforge.slidemenu.SlideMenu
        android:id="@+id/slideMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/flat_light_grey"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical" >

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/top_header_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollY="0dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/flat_white"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/flat_lila"
                        android:orientation="vertical"
                        android:padding="3dp" >

                        <TextView
                            android:id="@+id/event_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="1dp"
                            android:text="@string/default_event_name"
                            android:textColor="@color/dtu_yellow"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/event_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:drawableLeft="@drawable/location"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:text="@string/default_event_location"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/event_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:drawableLeft="@drawable/time"
                            android:drawablePadding="3dp"
                            android:gravity="center"
                            android:text="@string/default_event_time"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/flat_white"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <ImageView
                        android:id="@+id/event_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="image"
                        android:src="@drawable/dinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/flat_white"
                    android:minHeight="60dp"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/event_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="@string/default_event_description"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                
                <LinearLayout
                    android:id="@+id/event_menu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/grey"
                    android:orientation="vertical"
                    android:padding="5dp" >
                    
                    <TextView
                        android:id="@+id/event_menu_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:padding="2dp"
                        android:text="@string/menu_name"
                        android:textColor="@color/flat_white"
                        android:textSize="14sp" />

                    <RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@color/white"
					    android:orientation="horizontal"
					    android:padding="15dip" 
					    android:layout_marginBottom="5dp">
					
					    <ImageView
					        android:id="@+id/first_course_image"
					        android:layout_width="50dip"
					        android:layout_height="50dip"
					        android:layout_alignBottom="@+id/first_course_name"
					        android:layout_alignParentRight="true"
					        android:layout_marginRight="23dp"
					        android:src="@drawable/map" />

					
					    <TextView
					        android:id="@+id/first_course_name"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/first_course_type"
					        android:layout_toLeftOf="@+id/first_course_image"
					        android:text="@string/default_course_name"
					        android:textColor="@color/flat_grey"
					        android:textSize="25sp" />
					
					    <TextView
					        android:id="@+id/first_course_type"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignLeft="@+id/first_course_name"
					        android:ellipsize="end"
					        android:maxLines="1"
					        android:singleLine="true"
					        android:text="@string/default_course_type"
					        android:textColor="@color/flat_black"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:typeface="sans" />
					
					</RelativeLayout>

                    
                    <RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@color/white"
					    android:orientation="horizontal"
					    android:padding="15dip" 
					    android:layout_marginBottom="5dp">
					
					    <ImageView
					        android:id="@+id/main_course_image"
					        android:layout_width="50dip"
					        android:layout_height="50dip"
					        android:layout_alignBottom="@+id/main_course_name"
					        android:layout_alignParentRight="true"
					        android:layout_marginRight="23dp"
					        android:src="@drawable/map" />

					
					    <TextView
					        android:id="@+id/main_course_name"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/main_course_type"
					        android:layout_toLeftOf="@+id/main_course_image"
					        android:text="@string/default_course_name"
					        android:textColor="@color/flat_grey"
					        android:textSize="25sp" />
					
					    <TextView
					        android:id="@+id/main_course_type"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignLeft="@+id/main_course_name"
					        android:ellipsize="end"
					        android:maxLines="1"
					        android:singleLine="true"
					        android:text="@string/default_course_type"
					        android:textColor="@color/flat_black"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:typeface="sans" />
					
					</RelativeLayout>
                    
                    <RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:background="@color/white"
					    android:orientation="horizontal"
					    android:padding="15dip" >
					
					    <ImageView
					        android:id="@+id/dessert_course_image"
					        android:layout_width="50dip"
					        android:layout_height="50dip"
					        android:layout_alignBottom="@+id/dessert_course_name"
					        android:layout_alignParentRight="true"
					        android:layout_marginRight="23dp"
					        android:src="@drawable/map" />

					
					    <TextView
					        android:id="@+id/dessert_course_name"
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/dessert_course_type"
					        android:layout_toLeftOf="@+id/dessert_course_image"
					        android:text="@string/default_course_name"
					        android:textColor="@color/flat_grey"
					        android:textSize="25sp" />
					
					    <TextView
					        android:id="@+id/dessert_course_type"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignLeft="@+id/dessert_course_name"
					        android:ellipsize="end"
					        android:maxLines="1"
					        android:singleLine="true"
					        android:text="@string/default_course_type"
					        android:textColor="@color/flat_black"
					        android:textSize="12sp"
					        android:textStyle="bold"
					        android:typeface="sans" />
					
					</RelativeLayout>
                    
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutViewMapOfTheEvent"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@color/grey"
                    android:orientation="vertical"
                    android:padding="5dp" >

                    <TextView
                        android:id="@+id/seeItOnTheMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:padding="2dp"
                        android:text="@string/map"
                        android:textColor="@color/flat_white"
                        android:textSize="14sp" />

                    <WebView
                        android:id="@+id/imageViewMapOfTheEvent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:scaleType="center" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>