<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/dk.dtu.arsfest"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.astuetz.viewpager.extensions.ScrollingTabsView
        android:id="@+id/scrolling_tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/flat_red"
        app:dividerDrawable="@drawable/divider" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/scrolling_tabs"
        android:background="@color/flat_red" />

</RelativeLayout>