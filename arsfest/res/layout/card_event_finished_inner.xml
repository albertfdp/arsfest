<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/flat_greyed"
    android:gravity="center_vertical"
    android:minHeight="150dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp" >
              
   	<LinearLayout 
   	    android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:minHeight="150dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

	    <TextView
	        android:id="@+id/carddemo_suggested_title"
	        style="@style/carddemo_suggested_text_bold"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	
	    <TextView
	        android:id="@+id/carddemo_suggested_memeber"
	        android:paddingTop="5dp"
	        style="@style/carddemo_suggested_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	
	    <TextView
	        android:id="@+id/carddemo_suggested_subtitle"
	        style="@style/carddemo_suggested_text"
	        android:paddingTop="5dp"
	        android:gravity="right"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	
	    <TextView
	        android:id="@+id/carddemo_suggested_community"
	        android:paddingTop="5dp"
	        style="@style/carddemo_suggested_text_bold1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	        
	   	</LinearLayout>
    
    <ImageView
        android:layout_marginTop="2dp"
        android:id="@+id/colorBorder"
        android:background="@drawable/rectangle"
        android:layout_width="10dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>


</LinearLayout>