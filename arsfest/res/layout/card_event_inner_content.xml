<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- Use same ID to use built-in features -->
    <LinearLayout 
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/flat_lila"
       >
       
        <TextView
	        android:id="@+id/card_event_inner_content_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="24sp"
	        android:padding="10dp"
	        android:textAllCaps="true"
	        android:textColor="@color/flat_light_grey"
	        android:textStyle="bold"
	        android:gravity="center"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/flat_light_grey"
            android:orientation="horizontal" >
            
            <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical">
		        
                <ImageView
			        android:id="@+id/card_event_inner_content_location_icon"
			        android:src="@drawable/ic_action_place"
			        android:layout_gravity="center"
			        android:layout_marginTop="10dp"
			        android:layout_width="40dip"
			        android:layout_height="40dip" />

	            <TextView
	                android:id="@+id/card_event_inner_content_location"
	                style="@style/carddemo_suggested_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:gravity="center"
	                android:textColor="@color/card_text_grey"
	        		android:padding="10dp"
	        		android:textAllCaps="true" />
	            
	       	</LinearLayout>
	            
	      	<LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:orientation="vertical">
		        
               <ImageView
			        android:id="@+id/card_event_inner_content_time_icon"
			        android:src="@drawable/ic_action_time"
			        android:layout_gravity="center"
			        android:layout_marginTop="10dp"
			        android:layout_width="40dip"
			        android:layout_height="40dip" />

	            <TextView
	                android:id="@+id/card_event_inner_content_time"
	                style="@style/carddemo_suggested_text"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:gravity="center"
	                android:textColor="@color/card_text_grey"
	        		android:padding="10dp"
	        		android:textAllCaps="true"  />
	            
	      	</LinearLayout>

            
        </LinearLayout>
        
    </LinearLayout>

    
    
    

</RelativeLayout>