<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:minHeight="150dp"
    android:orientation="vertical"
    android:paddingLeft="10dp" >

	    <TextView
	        android:id="@+id/card_price_suggested_title"
	        style="@style/carddemo_suggested_text_bold1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	
	    <TextView
	        android:id="@+id/card_price_suggested_memeber"
	        android:paddingTop="5dp"
	        style="@style/carddemo_suggested_text_bold1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	
	
	    <TextView
	        android:id="@+id/card_price_suggested_community"
	        android:paddingTop="5dp"
	        style="@style/carddemo_suggested_text_bold"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
	        
</LinearLayout>

