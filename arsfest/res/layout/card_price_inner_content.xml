<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
	<LinearLayout 
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/flat_lila"
       >
    
    	<TextView
	        android:id="@+id/card_price_inner_content_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="24sp"
	        android:padding="10dp"
	        android:textAllCaps="true"
	        android:textColor="@color/flat_light_grey"
	        android:textStyle="bold"
	        android:gravity="center"/>

    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" 
    	    android:background="@color/flat_light_grey"
    	    android:orientation="horizontal">
    	    
    	    <TextView
		        android:id="@+id/card_price_inner_content_total1"
		        style="@style/carddemo_suggested_text_bold1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"/>
    	    
    	    <TextView
		        android:id="@+id/card_price_inner_content_total2"
		        style="@style/carddemo_suggested_text_bold1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"/>
    	</LinearLayout>

	    <LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" 
    	    android:background="@color/flat_light_grey"
    	    android:orientation="horizontal">
	
		    <TextView
		        android:id="@+id/card_price_inner_content_dance1"
		        android:paddingTop="5dp"
		        style="@style/carddemo_suggested_text_bold1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"/>
	    
		    <TextView
		        android:id="@+id/card_price_inner_content_dance2"
		        style="@style/carddemo_suggested_text_bold1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"/>
	
		</LinearLayout>
	    <TextView
	        android:id="@+id/card_price_inner_content_extra"
	        android:paddingTop="5dp"
	        style="@style/carddemo_suggested_text_bold"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/flat_light_grey"/>
	        
	</LinearLayout>
</RelativeLayout>
