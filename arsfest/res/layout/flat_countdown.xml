<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/countLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/flat_lila"
    android:baselineAligned="false"
    android:orientation="horizontal" >
    
    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/flat_lila"
        android:padding="1dp"
        android:orientation="vertical">
    
        
        <TextView
	        android:id="@+id/textDays"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:background="@color/flat_light_grey"
	        android:paddingTop="20dp"
	        android:paddingBottom="20dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"	        
	        android:textSize="30sp"
	        android:text="@string/countdown_days_value"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:id="@+id/labelDays"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/flat_white"
            android:padding="10dp"
            android:textSize="12sp"
            android:text="@string/countdown_days"/>
        
	</LinearLayout>
	
    <LinearLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/flat_lila"
        android:padding="1dp"
        android:orientation="vertical">
        
        <TextView
	        android:id="@+id/textHours"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/flat_light_grey"
	        android:gravity="center"
	        android:textSize="30sp"
	        android:paddingTop="20dp"
	        android:paddingBottom="20dp"
	        android:paddingLeft="5dp"
	        android:paddingRight="5dp"
	        android:text="@string/countdown_hours_value"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:id="@+id/labelHours"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/flat_white"
            android:padding="10dp"
            android:textSize="12sp"
            android:text="@string/countdown_hours"/>
        
	</LinearLayout>
	<LinearLayout
        android:layout_width="0px"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@color/flat_lila"
        android:padding="1dp"
        android:orientation="vertical">
        
        <TextView
	        android:id="@+id/textMinutes"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/flat_light_grey"
	        android:gravity="center"
	        android:paddingTop="20dp"
	        android:paddingBottom="20dp"
	        android:paddingLeft="5dp"
	        android:textSize="30sp"
	        android:paddingRight="5dp"
	        android:text="@string/countdown_mins_value"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
        
        <TextView
            android:id="@+id/labelMinutes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/flat_white"
            android:padding="10dp"
            android:textSize="12sp"
            android:text="@string/countdown_mins"/>
        
	</LinearLayout>
</LinearLayout>