<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/card_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/map" />
    </LinearLayout>

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/card_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="3dip" >

        <!-- Title Of Event -->

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_event_name"
            android:textColor="@color/flat_black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Event location -->

        <TextView
            android:id="@+id/card_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dip"
            android:text="@string/default_event_location"
            android:textColor="@color/flat_grey"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- ListRow Left sied Thumbnail image -->

    <LinearLayout
        android:id="@+id/card_content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dip"
        android:orientation="vertical"
        android:padding="3dip" >

        <!-- Time -->

        <TextView
            android:id="@+id/card_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="right"
            android:text="@string/default_event_time"
            android:textColor="@color/flat_blue"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>